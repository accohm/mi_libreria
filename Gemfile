source 'https://rubygems.org'

gem 'rails'

### Development and Test Setting ###
group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'spork'
  gem 'byebug'
end

### Development Setting ###
group :development do
  gem 'pry'
  gem 'pry-rails'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

### Test Setting ###
group :test do
  gem 'factory_girl_rails'
  gem 'faker'
end

### Production Setting ###
group :production do
end

### Others ###
gem 'sass-rails', '~> 5.0'
gem 'bootstrap-sass'
gem 'bcrypt'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'sprockets'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', '~> 0.4.0'
end
